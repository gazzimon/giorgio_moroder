{
  "name": "seda-hardhat-starter-kit",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "check": "bun run lint && bun run format:sol",
    "clean": "rimraf artifacts cache typechain-types",
    "compile": "hardhat compile",
    "deploy:usx402": "hardhat run scripts/deploy-usx402.ts --network cronosTestnet",
    "deploy:consumer:v2": "hardhat run scripts/deploy-consumer-v2.ts --network cronosTestnet",
    "export:usx402:standardjson": "hardhat run scripts/export-usx402-standard-json.ts",
    "verify:usx402": "hardhat run scripts/verify-usx402.ts --network cronosTestnet",
    "mint:usx402": "hardhat run scripts/mint-usx402.ts --network cronosTestnet",
    "burn:usx402": "hardhat run scripts/burn-usx402.ts --network cronosTestnet",
    "balance:usx402": "hardhat run scripts/balance-usx402.ts --network cronosTestnet",
    "pause:usx402": "hardhat run scripts/pause-usx402.ts --network cronosTestnet",
    "unpause:usx402": "hardhat run scripts/unpause-usx402.ts --network cronosTestnet",
    "format:sol": "prettier --check \"**/*.sol\"",
    "format:sol:fix": "prettier --write \"**/*.sol\"",
    "lint": "bun run lint:ts && bun run lint:sol",
    "lint:sol": "solhint 'contracts/**/*.sol' --ignore-path .solhintignore",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix --ignore-path .solhintignore",
    "lint:ts": "bunx biome check .",
    "lint:ts:fix": "bunx biome check --write .",
    "test": "hardhat test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@dotenvx/dotenvx": "^1.49.1",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "hardhat": "^2.26.1",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "rimraf": "^6.0.1",
    "solhint": "^6.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@seda-protocol/evm": "1.0.0"
  }
}
